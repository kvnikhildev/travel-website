pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kvnikhildev/travel-website.git'
            }
        }
        stage('Build') {
            steps {
            
                 sh 'docker build -t travel-website .'    

                }
            }
        stage('Test') {
            steps {
                script {
                  sh 'docker run --rm travel-website pytest --junitxml=test_results.xml'
                  junit 'test_results.xml'
                  sh 'docker run --rm travel-website pylint app.py > pylint_results.txt'
                  sh 'docker run --rm travel-website bandit -r . -f txt -o bandit-report.txt'
                }   
            }
        }
    }
}