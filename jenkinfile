pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kvnikhildev/travel-website.git'
            }
        }
        stage('Build') {
            steps {
            
                 sh 'docker build -t travel-website .'    

                }
            }
        stage('Test') {
            steps {
                
                script {
                    dockerImage.inside {
                        sh 'pylint app.py'
                        sh 'pytest'
                        sh 'bandit app.py'
                    }
                }
            }
        }
    }
}