pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kvnikhildev/travel-website.git'
            }
        }
        stage('Build') {
            steps {
            
                 sh 'docker build -t travel-website .'    

                }
            }
        stage('Test') {
            steps {
                script {
                  sh 'docker run --rm travel-website pytest'
                  sh 'docker run --rm travel-website pylint app.py || true'
                  sh 'docker run --rm travel-website bandit '
                }   
            }
        }
    }
}