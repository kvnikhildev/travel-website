pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kvnikhildev/travel-website.git'
            }
        }
        stage('Build') {
            steps {
            
                 sh 'docker build -t travel-website .'    

                }
            }
        stage('Test') {
            steps {
                
                sh 'pip install pytest'
                sh 'pytest'
            
                
            }
        }
    }
}