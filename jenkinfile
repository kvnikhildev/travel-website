pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kvnikhildev/travel-website.git'
            }
        }
        stage('Build') {
            steps {
            
                 sh 'docker build -t travel-website .'    

                }
            }
        stage('Test') {
            steps {
                script {
                  sh 'docker run --rm travel-website pytest > test_results.xml'
                  junit 'test_results.xml'
                  sh 'pylint app.py > pylint_results.txt'
                  sh 'bandit -r . -f txt -o bandit-report.txt'
                    archiveArtifacts artifacts: 'pylint_results.txt, bandit-report.txt', fingerprint: true
                }   
            }
        }
    }
}